<Window x:Class="ChatbotPart3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Maven Cybersecurity Chatbot" Height="600" Width="800">
    <Grid Margin="10">
        <TextBox x:Name="ChatHistory" IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap" FontFamily="Consolas" FontSize="14"
                 Margin="0,0,0,50" />

        <TextBox x:Name="UserInput" Height="30" VerticalAlignment="Bottom"
                 KeyDown="UserInput_KeyDown" Margin="0,0,80,0"/>

        <Button Content="Send" Width="70" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Click="Send_Click" />
    </Grid>
</Window>