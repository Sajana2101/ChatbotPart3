<Window x:Class="ChatbotPart3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Maven Cybersecurity Chatbot" Height="600" Width="800" Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
           
            <RowDefinition />
           
            <RowDefinition Height="50"/>
           
        </Grid.RowDefinitions>

       
        <Border Grid.Row="0" Background="#007ACC" CornerRadius="8" Padding="10" Margin="0,0,0,10">
            <TextBlock Text="MAVEN" FontSize="28" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

       
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Name="ChatScrollViewer">
            <StackPanel Name="ChatPanel" Margin="5" />
        </ScrollViewer>

        <!-- Input area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="UserInput" Height="30" VerticalAlignment="Center" Margin="0,0,10,0"
                     KeyDown="UserInput_KeyDown" FontSize="14" Padding="5"/>
            <Button Content="Send" Width="70" Height="30" VerticalAlignment="Center" Grid.Column="1" 
                    Click="Send_Click" Background="#007ACC" Foreground="White" FontWeight="Bold" />
        </Grid>
    </Grid>
</Window>
